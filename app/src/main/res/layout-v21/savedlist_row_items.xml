<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="230dp">


<!--Creating a TextView-->

<!--Creating a Button-->

<TextView
    android:id="@+id/txtFinding"
    android:layout_width="236dp"
    android:layout_height="60dp"
    android:gravity="left"
    android:paddingBottom="20dp"
    android:text="@string/text_view"
    android:textColor="#000000"
    android:textSize="16sp"
    app:flow_horizontalStyle="packed"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/txtRecommendation"
    android:layout_width="350dp"
    android:layout_height="47dp"
    android:gravity="left"
    android:paddingBottom="20dp"
    android:text="@string/text_view"
    android:textColor="#000000"
    android:textSize="16sp"
    app:flow_horizontalStyle="packed"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtNotes" />

<TextView
    android:id="@+id/txtNotes"
    android:layout_width="232dp"
    android:layout_height="57dp"
    android:layout_marginTop="8dp"
    android:gravity="left"
    android:paddingBottom="20dp"
    android:text="@string/text_view"
    android:textColor="#000000"
    android:textSize="16sp"
    app:flow_horizontalStyle="packed"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/txtFinding" />

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/txtProblemPic"
    android:layout_width="117dp"
    android:layout_height="139dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="15dp"
    android:gravity="left"
    android:paddingBottom="20dp"
    android:text="@string/text_view"
    android:textColor="#000000"
    android:textSize="16sp"
    app:flow_horizontalStyle="packed"
    app:layout_constraintBottom_toTopOf="@+id/txtRecommendation"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
